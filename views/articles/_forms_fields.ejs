<div class="form-group mb-3">
    <label for="title" class="form-label">Title</label>
    <input required type="text" value="<%= article.title %> "name="title", id="title" class="form-control">
</div>
<div class="form-group mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea required type="text" name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group mb-3">
    <label for="markdown" class="form-label">Markdown</label>
    <textarea required type="text" name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<div class="form-group">
    <a href="/" class="btn btn-secondary">Cancel</a>
    <button class="btn btn-primary">Save</button>
</div>

